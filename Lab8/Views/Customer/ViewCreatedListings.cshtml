@model IEnumerable<Lab8.Models.Listing>

@{
    ViewData["Title"] = "ViewCreatedListings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ViewCreatedListings</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Condition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.TypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimedBy.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Condition.ConditionID)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ListingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ListingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
