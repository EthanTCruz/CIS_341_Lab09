@model ICollection<ManagerListingDTO>
@{
    ViewData["Title"] = "Manager Home Page";
}

<h1>Listings</h1>

<table class="table" cellpadding="1" cellspacing="1">
    <thead>
        <tr>
            <td>Listings</td>
           <td>
               Description
            </td>
            <td>
               Condition
            </td>
            <td>
                Quantity
            </td>

            <td>
                Store
            </td>
                        <td>
                View Details
            </td>
                        <td>
                Created By
            </td>
            <td>
                Status
            </td>

        </tr>
    </thead>
    <tbody>
    @foreach(ManagerListingDTO l in Model) {
        <tr>
<td>
                @l.ListingID
            </td>
            <td>
                @l.Description
            </td>
            <td>
                @l.Condition
            </td>
            <td>
                @l.Quantity
            </td>

            <td>
                @l.Store
            </td>
                        <td>
                View Details
            </td>
                <td>
                    @l.CreatedBy
                </td>
                        <td>
                <a asp-action="Claim_Unclaim" asp-route-id="@l.ListingID">@l.Status</a>
            </td>

        </tr>

    }
    </tbody>
</table>