@model IEnumerable<Lab8.Models.DTO.ListingDTO>

@{
    ViewData["Title"] = "UnapprovedListings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UnapprovedListings</h1>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Approve
            </th>
            <th>
               Disapprove
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Condition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Disapprove" asp-route-id="@item.ListingID">Disapprove</a> |
                </td>
            <td>
              <a asp-action="Approve" asp-route-id="@item.ListingID">Approve</a> |
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ListingID">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
